<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/title_textview"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/visit_tag" />

    <EditText
        android:id="@+id/search_place_editText"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="40dp"
        android:layout_height="35dp"
        android:visibility="gone"
        android:layout_below="@+id/title_textview"
        android:hint="Enter Place" />

    <Spinner
        android:id="@+id/choose_dest_spinner"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/search_place_editText"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/nxt_btn"
        android:background="@android:color/transparent"
        android:dropDownVerticalOffset="-1dp"
        android:popupBackground="@android:color/white"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/nxt_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/search_place_editText"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/red_right_arrow" />

</RelativeLayout>